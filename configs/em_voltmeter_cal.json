{
    "name": "Spectrometer EuroMeasure",
    "defaults": {
        "delay": 0.1
    },
    "controllers": [
        {
            "type": "HP34401A",
            "ip": "192.168.1.4",
            "speed": "Middle",
            "range": "10",
            "params": [
                {
                    "type": "VDC",
                    "name": "VDC"
                }
            ]
        },
        {
            "type": "fy",
            "port": "/dev/ttyUSB0",
            "params": [
                {  
                    "type": "amplitude",
                    "channel": 1,
                    "name": "Amplitude",
                    "default": 1
                },
                {
                    "type": "frequency",
                    "channel": 1,
                    "name": "Frequency",
                    "default": 1e6
                },
                {
                    "type": "offset",
                    "channel": 1,
                    "name": "Offset",
                    "default": 0
                }
            ]
        },
        {
            "type": "EuroMeasure",
            "port": "/dev/ttyACM0",
            "params": [
                {
                    "type": "voltmeter_raw",
                    "channel": 1,
                    "address": 14,
                    "name": "ch1a"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 2,
                    "address": 14,
                    "name": "ch2a"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 3,
                    "address": 14,
                    "name": "ch3a"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 4,
                    "address": 14,
                    "name": "ch4a"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 1,
                    "address": 15,
                    "name": "ch1b"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 2,
                    "address": 15,
                    "name": "ch2b"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 3,
                    "address": 15,
                    "name": "ch3b"
                },
                {
                    "type": "voltmeter_raw",
                    "channel": 4,
                    "address": 15,
                    "name": "ch4b"
                }
            ]
        }
    ]
}